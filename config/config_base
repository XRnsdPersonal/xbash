export readonly rDirPathUserHome=/home/${rNameUser}/
# home/xxxx
export readonly rDirNameLog=log
export readonly rDirNameTools=tools
export readonly rDirNameCmd=cmds
# home/$rNameUser/xxxx
export readonly rDirNameCmdConfig=config
export readonly rDirNameCmdData=data
export readonly rDirNameCmdModule=module
# home/$rNameUser/cmds/modiule/test
export readonly rDirNameCmdModuleTest=test

# home/$rNameUser/xxxx
export readonly rDirPathCmds=${rDirPathUserHome}/${rDirNameCmd}
# home/$rNameUser/cmds/xxxx
export readonly rDirPathCmdsData=${rDirPathCmds}/${rDirNameCmdData}
export readonly rDirPathCmdsConfig=${rDirPathCmds}/${rDirNameCmdConfig}
export readonly rDirPathCmdsModule=${rDirPathCmds}/${rDirNameCmdModule}
export readonly rDirPathCmdsModuleTest=${rDirPathCmdsModule}/${rDirNameCmdModuleTest}

# home/$rNameUser/cmds/modiule/test/xxxx
export readonly rFileNameCmdModuleTestBase=base.sh
# home/$rNameUser/cmds/modiule/xxxx
export readonly rFileNameCmdModuleTools=tools.sh
export readonly rFileNameCmdModuleCompile=compile.sh
