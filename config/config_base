# home/$rNameUser/cmds/modiule/xxxx
export readonly rFilePathCmdModuleTools=${rDirPathCmdsModule}/${rFileNameCmdModuleTools}
export readonly rFilePathCmdModuleTestBase=${rDirPathCmdsModuleTest}/${rFileNameCmdModuleTestBase}

export readonly rCmdsPermissionRoot=(xb backup restore)
export readonly rCmdsPermissionBase=(restartadb help monkey systemui launcher mtk_flashtool gjh bootanim)

export mCmdsModuleDataDevicesList=()
export mFilePathLog #=${rDirPathUserHome}${rDirNameLog}/${rBaseShellParameter2}.log
