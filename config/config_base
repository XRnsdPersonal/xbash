export readonly rTimeBackup=$(date -d "today" +"%m%d-%H:%M:%S")

export readonly rIsDebug=false

commandAuthority=null


# 非基本配置
export readonly rDirPathTools=${rDirPathUserHome}${rDirNameTools}


#外部参数
export readonly rBaseShellParameter1=$0
